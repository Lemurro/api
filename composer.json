{
  "name": "lemurro/api",
  "description": "Lemurro API",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitrii Shcherbakov",
      "email": "info@bestion.ru",
      "homepage": "http://bestion.ru",
      "role": "Developer"
    }
  ],
  "scripts": {
    "phpcs80": "phpcs -nsp ./app --runtime-set testVersion 8.0 --standard=PSR1,PSR12,./vendor/phpcompatibility/php-compatibility/PHPCompatibility --parallel=3 --report=xml --report-file=./phpcs-report.xml",
    "psalm": "psalm",
    "run-before-test": "php -S 127.0.0.1:8000 -t public",
    "test": [
      "codecept clean",
      "codecept run api"
    ]
  },
  "autoload": {
    "psr-4": {
      "Lemurro\\Api\\App\\": "app/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "lemurro/api-core": "3.0.*",
    "php": "8.0.*"
  },
  "require-dev": {
    "codeception/codeception": "5.0.*",
    "codeception/module-asserts": "3.0.*",
    "codeception/module-db": "3.1.*",
    "codeception/module-phpbrowser": "3.0.*",
    "codeception/module-rest": "3.3.*",
    "phpcompatibility/php-compatibility": "9.3.*",
    "symfony/var-dumper": "5.4.*"
  }
}
